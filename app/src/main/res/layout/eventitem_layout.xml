<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_ev"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="Name" />

    <TextView
        android:id="@+id/desc_ev"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="Desc" />

    <TextView
        android:id="@+id/cur_ev"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="203dp"
        android:layout_marginRight="203dp"
        android:text="current" />

    <TextView
        android:id="@+id/max_ev"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="127dp"
        android:layout_marginEnd="36dp"
        android:text="max" />

    <TextView
        android:id="@+id/data_ev"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name_ev"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="154dp"
        android:text="Data" />

    <TextView
        android:id="@+id/start_ev"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/data_ev"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="120dp"
        android:text="start" />

    <TextView
        android:id="@+id/end_ev"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/data_ev"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="end" />
</RelativeLayout>