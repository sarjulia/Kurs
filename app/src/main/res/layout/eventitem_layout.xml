<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_ev"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="Name" />

    <TextView
        android:id="@+id/desc_ev"
        android:layout_width="306dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name_ev"
        android:layout_marginTop="51dp"
        android:text="Desc" />

    <TextView
        android:id="@+id/cur_ev"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name_ev"
        android:layout_marginTop="127dp"
        android:text="current" />

    <TextView
        android:id="@+id/max_ev"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cur_ev"
        android:layout_marginEnd="45dp"
        android:text="max" />

    <TextView
        android:id="@+id/data_ev"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name_ev"
        android:layout_marginTop="164dp"
        android:text="Data" />

    <TextView
        android:id="@+id/start_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/data_ev"
        android:layout_centerHorizontal="true"
        android:text="start" />

    <TextView
        android:id="@+id/end_ev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name_ev"
        android:layout_alignTop="@+id/data_ev"
        android:text="end" />
</RelativeLayout>